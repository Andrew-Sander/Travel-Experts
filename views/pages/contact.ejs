    <body class="contactBody">
        <div class="w3-container"><%- include('../partials/header') %></div>
        <div class="contactInfo">
            <h2>Travel-Experts.ltd</h2><br />
            <p>Business Phone: 1(403)222-2222</p><br />
            <p>Email: travelexperts@bussiness.com</p><br />
            <p>Location: 1301 16 Ave NW, Calgary AB T2M 0L4</p><br />
        </div><br />
        <div class="contactSlide">
            <p id="moveText">&#8691 Contact Our Superstar travel agents!!! &#8691</p>
        </div>
        <div class="contactSelect">
            <select id="select" onchange="onChange(this.value)">
                <% result.forEach(function(agent, i) { %>
                    <option value="<%= agent.AgtBusPhone%> <%= agent.AgtEmail %>">
                        <%= agent.AgtFirstName %> <%= agent.AgtLastName %>
                    </option>
                <% }); %>
            </select>
            <p id="contactLabel">Call to check Limited-Timer Offer </p>
        </div>
        <footer>
            <p>Copyright &copy; To Travel-Experts(TEAM 5) Inc. 2023</p>
        </footer>
        <script>
			function onChange() {
				var x = document.getElementById("select").selectedIndex;
                var info = document.getElementsByTagName("option")[x].value;
				document.getElementById("contactLabel").innerHTML = info  ;
			}
            
            document.onscroll = function () {
                if (window.scrollY > "10px") {
                    document.getElementById('moveText').style.position = 'absolute';
                }
                else {
                    document.getElementById('moveText').style.position = 'fixed';
                }
            }
